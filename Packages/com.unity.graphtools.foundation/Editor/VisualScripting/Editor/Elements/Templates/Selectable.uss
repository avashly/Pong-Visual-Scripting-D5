.selectable > #selection-border {
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}

.selectable:hover > #selection-border {
    border-color: rgba(68,192,255, 0.5);
    border-width: 1px;
}

.selectable:selected > #selection-border {
    border-color: #44C0FF;
    border-width: 1px;
}

.selectable:selected:hover > #selection-border {
    border-width: 2px;
}
